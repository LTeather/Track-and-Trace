<%- include('partials/header-passport') -%>
  
<body>
  
  <section class="navigation">
    <div class="topnav">
      <div class="container"><a href="#"><img class="logo" alt="logo" src="../img/logo.png"></a></div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0" style="height: 53px;line-height: 40px;">
            <li class="nav-item">
              <a class="nav-link" href="/">COVID Checker</a>
            </li>        
            <li class="nav-item">
              <a class="nav-link" href="/">Check Symptoms</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="https://www.nhs.uk/conditions/coronavirus-covid-19/">Latest Advice</a>
            </li>                    
            <li class="nav-item">
              <a class="nav-link" href="https://www.nhs.uk/nhs-services/">Services near you</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/">Contact Us</a>
            </li>                   
          </ul>
        </div>
      </div>
    </nav>
  </section>

  <section class="content">
    <div class="notifications" id="notifications"></div>
    <div class="container">

      <div class="main-container">
        <h2>Log-in</h2>
        <div class="login-container">
          <form method="post" action="/login">
            <h3>Username</h3> 
            <input type="text" name="username" placeholder="Enter Username...">
            <h3>Password</h3> 
            <input type="password" name="password"  placeholder="Enter Password...">
            <br>
            <button class="btn btn-success" type="submit" value="Login">Login</button>
            <% if (messages.error) { %>
                <%= messages.error %>
            <% } %>
          </form>
        </div>
      </div>

    </div>
  </section>
</div>  

