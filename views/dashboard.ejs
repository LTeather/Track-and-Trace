                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-container">
                <div id="stats-input">
                    <h3>TOTAL INPUT:</h3>
                    <h4 id="totalusers"><i class="fas fa-users" aria-hidden="true"></i> 0</h4>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-container">
                <div id="stats-alerted">
                    <h3>USERS ALERTED:</h3>
                    <h4 id="totalusers"><i class="fas fa-users" aria-hidden="true"></i> 0</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="chart-container">
        <h2>Daily Cases Chart</h2>
        <canvas id="myChart" width="400px" height="400px"></canvas>
    </div>
    
  </div> 

